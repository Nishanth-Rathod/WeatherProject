{{!-- Weather data --}}
<div class="container-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="main_content">
                <form class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter the city name" autocomplete="off">
                    <input type="submit" value="search" id="submitBtn">
                </form>
            </div>
            <div class="tempInformation">
                <div class="top_layer">
                    <p id="day">Monday</p>
                    <p class="today_data" id="date">13 <p id="month">Oct</p></p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Get Output Here</p>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span id="temp_real_value">0</span><sup>o</sup>C</p>
                        <p id="temp_status"><id class="fa fa-cloud" aria-hidden="true"></id></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{>Footer}}
<script src="main.js"></script>
<script>
    const getCurrentDay=()=>{
        let weekday = new Array(7);
        weekday[0]="Sunday";
        weekday[1]="Monday";
        weekday[2]="Tuesday";
        weekday[3]="Wednesday";
        weekday[4]="Thursday";
        weekday[5]="Friday";
        weekday[6]="Saturday";
        let currentTime=new Date();
        let days=weekday[currentTime.getDay()];
        let day=document.getElementById('day')
        day.innerText=days;
            };
    getCurrentDay();
    const getMonth=()=>{
        let month=new Array(12);
        month[0]="Jan";
        month[1]="Feb";
        month[2]="Mar";
        month[3]="Apr";
        month[4]="May";
        month[5]="June";
        month[6]="July";
        month[7]="Aug";
        month[8]="Sept";
        month[9]="Oct";
        month[10]="Nov";
        month[11]="Dec";
        let currentMonth=new Date();
        console.log(currentMonth)
        let months=month[currentMonth.getMonth()]
        let monthn=document.getElementById('month')
        monthn.innerText=months
    }
    getMonth();
   const date=()=>{
    let a=new Date();
    let b=a.getDate();
    const dates=document.getElementById('date');
    dates.innerText=b;
   }
   date();
</script>
</body>
